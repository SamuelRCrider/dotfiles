-- -*- mode: lua; -*-

conky.config = {
	 out_to_x = false,
	 background = false,
	 border_width = 1,
	 cpu_avg_samples = 2,
	 net_avg_samples = 2,
	 no_buffers = true,
	 out_to_console = true,
	 out_to_stderr = false,
	 extra_newline = false,
	 update_interval = 1.0,
	 update_interval_on_battery = 1.0,
	 uppercase = false,
	 use_spacer = left,
	 times_in_seconds = true,
};

-- Colors are in dzen2 format.
conky.text =
[[
       \
^fg(grey)${time %a %d %b %H:%M} \
       \
^fg(grey)CPU: ^fg(DeepSkyBlue)$cpu% \
^fg(grey)RAM: ^fg(DeepSkyBlue)${if_match ${to_bytes $memeasyfree} < 536870912}^fg(Red)${endif}$memperc% \
^fg(grey)↓ ^fg(DeepSkyBlue)${downspeedf ${gw_iface}} KiB \
^fg(grey)↑ ^fg(DeepSkyBlue)${upspeedf ${gw_iface}} KiB \
       \
^fg(grey)^fn(FontAwesome:size=10)^fn(FiraMono:size=10) ^fg(DeepSkyBlue)${battery_percent}% \
${if_match "${exec pactl list sinks | awk '/^\tMute:/ {print $2;exit}'}" == "no"}^fg(grey) ^fn(FontAwesome:size=10) ^fn(FiraMono:size=10)^fg(DeepSkyBlue)${exec pactl list sinks | awk '/^\tVolume:/ {print $5;exit}'}${endif} \
       \
^fg(grey)^fn(FontAwesome:size=10)^fg(DeepSkyBlue)^fn(FiraMono:size=10)${wireless_link_qual_perc wlp2s0}% ${wireless_essid wlp2s0} ^fg(grey)${exec curl -s www.icanhazip.com} \
       \
]]
